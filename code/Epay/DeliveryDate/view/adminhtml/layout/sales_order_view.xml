<?xml version="1.0"?>
<page layout="admin-2columns-left" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="order_items">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Epay_DeliveryDate::order/view/items.phtml</argument>
            </action>
            <arguments>
                <argument name="view_model" xsi:type="object">Epay\DeliveryDate\ViewModel\DeliveryDate</argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="default_order_items_renderer">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Epay_DeliveryDate::order/view/items/renderer/default.phtml</argument>
            </action>
            <arguments>
                <argument name="view_model" xsi:type="object">Epay\DeliveryDate\ViewModel\DeliveryDate</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>

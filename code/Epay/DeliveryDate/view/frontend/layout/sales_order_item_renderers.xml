        <referenceBlock name="sales.order.items.renderers.default">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Epay_DeliveryDate::order/items/renderer/default.phtml</argument>
            </action>
            <arguments>
                <argument name="view_model" xsi:type="object">Epay\DeliveryDate\ViewModel\DeliveryDate</argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="order_totals">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Epay_DeliveryDate::order/totals.phtml</argument>
            </action>
            <arguments>
                <argument name="view_model" xsi:type="object">Epay\DeliveryDate\ViewModel\DeliveryDate</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
